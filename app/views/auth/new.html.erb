<% form_for :session, @session, :url => { :action => 'create' },
            :html => { :class => 'small' } do |f| %>
  <p>
    <%= f.label :login, 'Username' %>
    <%= f.text_field :login, :size => 15 %>
  </p>
  <p>
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password, :size => 15 %>
  </p>
  <p>
    <%= f.submit 'Login' %>
  </p>
<% end %>
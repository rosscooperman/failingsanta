<% content_for :head do %>
  <%= stylesheet_link_tag 'list' %>
<% end %>

<h1>Users</h1>

<% if @users.count > 0 %>
  <ul class="list">
  <% @users.each do |user| %>
    <li>
      <div class="links">
        <%= link_to 'edit', edit_user_path(user) %> |
        <%= link_to 'delete', user_path(user), :method => :delete, :confirm => 'Are you sure?' %>
      </div>
      <div class="title"><%= link_to h(user.login), user %></div>
      <div class="subtitle">
        <%=h user.name %>
        (<%= link_to h(user.email), "mailto:#{h(user.email)}" %>)
      </div>
    </li>
  <% end %>
  </ul>
<% end %>

<%= link_to 'create user', new_user_path %>